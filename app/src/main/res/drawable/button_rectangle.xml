<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0D5500"
                android:endColor="#0D5500"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#0D5500" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#14B61A"
                android:endColor="#14B61A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#14B61A" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#14B61A"
                android:endColor="#14B61A"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#14B61A" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>