<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="148dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:text="그림 올리기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUploadText" />

    <Button
        android:id="@+id/buttonUploadVoice"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:text="음성 올리기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUploadImage"
        app:layout_constraintVertical_bias="0.436" />

    <Button
        android:id="@+id/buttonUploadText"
        android:layout_width="142dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="260dp"
        android:text="글 올리기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSendText"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:layout_marginTop="260dp"
        android:text="글 전달하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toEndOf="@+id/buttonUploadText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSendImage"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="그림 전달하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toEndOf="@+id/buttonUploadImage"
        app:layout_constraintTop_toBottomOf="@+id/buttonSendText" />

    <Button
        android:id="@+id/buttonSendVoice"
        android:layout_width="132dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:text="음성 전달하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/buttonUploadVoice"
        app:layout_constraintTop_toBottomOf="@+id/buttonSendImage"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="109dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="108dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="회원가입"
        app:layout_constraintEnd_toStartOf="@+id/textUserName"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/buttonLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUserName"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="#ABC5C8"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>